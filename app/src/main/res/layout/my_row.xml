<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="55dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/data_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.007"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.673" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="103dp"
                android:layout_height="57dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/data_id"
                app:layout_constraintEnd_toStartOf="@+id/time1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/diastolic1"
                app:layout_constraintEnd_toStartOf="@+id/comment1"
                app:layout_constraintHorizontal_bias="0.816"
                app:layout_constraintStart_toStartOf="@+id/data_id"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/systolic1"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_marginTop="56dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/date1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/date1"
                app:layout_constraintTop_toBottomOf="@+id/date1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/diastolic1"
                android:layout_width="74dp"
                android:layout_height="31dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/systolic1"
                app:layout_constraintEnd_toEndOf="@+id/time1"
                app:layout_constraintStart_toStartOf="@+id/time1"
                app:layout_constraintTop_toTopOf="@+id/systolic1"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/pulse1"
                android:layout_width="66dp"
                android:layout_height="31dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/diastolic1"
                app:layout_constraintEnd_toEndOf="@+id/comment1"
                app:layout_constraintStart_toStartOf="@+id/comment1"
                app:layout_constraintTop_toTopOf="@+id/diastolic1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/comment1"
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:layout_marginEnd="48dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/time1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time1"
                app:layout_constraintVertical_bias="0.272" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>